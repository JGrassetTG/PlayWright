{
  "name": "carrito-playwright",
  "version": "1.0.0",
  "description": "Proyecto de pruebas automatizadas con Playwright",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:qa",
    "test:dev": "set ENV=dev && npx playwright test",
    "test:qa": "set ENV=qa && npx playwright test",
    "test:prod": "set ENV=prod && npx playwright test",
    "report": "npx playwright show-report"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "qa"
  ],
